</head>

<body class="home-bg-color">
  <%- include('../includes/header.ejs') %>
  <%- include('../includes/search-bar.ejs') %>
  <section class="container">
    <% if (searches.length > 0) { %> 
    <ul class="list-group" role="group">
      <% for (let location of searches) { %> 
      <li class="list-group-item">
        <button type="button" class="btn btn-primary btn-lg d-flex justify-content-start">
          <p class="button-title mb-0">
            <%= location.city %> 
          </p>
          <div class="margin-lft">
            <svg width="22" height="22" viewBox="0 0 16 16" class="bi bi-arrow-right-circle" fill="currentColor"
              xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
              <path fill-rule="evenodd"
                d="M4 8a.5.5 0 0 0 .5.5h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5A.5.5 0 0 0 4 8z" />
            </svg>
          </div>
        </button>
      </li>
    <% } %> 
      <li class="list-group-item">
        <%- include('../includes/edit-button.ejs') %>
      </li>
    </ul>
  <% } else { %> 
    <h2>Your saved searches desplay here!</h2>
  <% } %> 

  </section>
  <%- include('../includes/footer.ejs') %>
  <%- include('../includes/end.ejs') %>